{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "auto",
  "jsxBracketSameLine": false,
  "jsxSingleQuote": true,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",

  "overrides": [{
      "files": "*.{js,jsx,tsx,ts,scss,json,html}",
      "options": {
          "tabWidth": 4
      }
  }]
}
